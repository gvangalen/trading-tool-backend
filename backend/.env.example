# === 📦 Database instellingen ===
DB_HOST=postgres             # naam van de container in docker-compose
DB_PORT=5432
DB_NAME=market_dashboard
DB_USER=dashboard_user
DB_PASS=your-secure-password

# === 🔁 Celery en Redis ===
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# === 🧠 OpenAI instellingen (optioneel) ===
OPENAI_API_KEY=your-openai-api-key
AI_MODE=live                # of 'off' als je het tijdelijk wilt uitschakelen

# === 🌐 API base URL (voor Celery intern gebruik) ===
API_BASE_URL=http://market_dashboard-market_data_api:5002/api
