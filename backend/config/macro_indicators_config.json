{
  "base_urls": {
    "yahoo": "https://query1.finance.yahoo.com/v8/finance/chart/{symbol}?range=1d&interval=1d",
    "alpha_vantage": "https://www.alphavantage.co/query?function=TIME_SERIES_DAILY&symbol={symbol}&apikey=demo",
    "alternative": "https://api.alternative.me/fng/?limit=1"
  },

  "indicators": {
    "S&P500": {
      "symbol": "^GSPC",
      "source": "yahoo",
      "thresholds": [4000, 4300, 4600],
      "positive": true,
      "category": "macro",
      "correlation": "positief",
      "explanation": "Hogere S&P500-standen duiden vaak op een gezonde aandelenmarkt en toenemend risico-appetijt.",
      "timeframe": "1D",
      "interpretations": {
        "0": "Zwakke aandelenmarkt, risicomijdend sentiment",
        "25": "Onder druk, voorzichtigheid geboden",
        "50": "Neutraal marktsentiment",
        "75": "Sterk positief sentiment, gezonde markt",
        "100": "Zeer sterke aandelenmarkt, bullish momentum"
      },
      "actions": {
        "0": "Vermijd risicovolle assets",
        "25": "Wees selectief met nieuwe posities",
        "50": "Afwachtend, bevestiging zoeken",
        "75": "Positieve setups zijn kansrijk",
        "100": "Overweeg winsten te nemen bij oververhitting"
      }
    },

    "vix": {
      "symbol": "^VIX",
      "source": "yahoo",
      "thresholds": [13, 18, 25],
      "positive": false,
      "category": "macro",
      "correlation": "negatief",
      "explanation": "Een hogere VIX duidt op meer angst en volatiliteit op de markt.",
      "timeframe": "1D",
      "interpretations": {
        "0": "Extreme angst en onzekerheid",
        "25": "Verhoogde angst, risico’s nemen af",
        "50": "Gemiddeld volatiliteitsniveau",
        "75": "Rustige markt, vertrouwen neemt toe",
        "100": "Zeer lage angst, zelfgenoegzaamheid mogelijk"
      },
      "actions": {
        "0": "Bescherm kapitaal, hoge volatiliteit",
        "25": "Voorzichtig, markt nerveus",
        "50": "Normale volatiliteit – neutraal",
        "75": "Positief klimaat voor risk assets",
        "100": "Waak voor complacency – mogelijk topvorming"
      }
    },

    "dxy": {
      "symbol": "DX-Y.NYB",
      "fallback_symbol": "EURUSD",
      "source": "yahoo",
      "thresholds": [98, 102, 106],
      "positive": false,
      "category": "macro",
      "correlation": "negatief",
      "explanation": "Een sterke dollarindex (DXY) drukt vaak op de prijs van Bitcoin. Een dalende DXY is gunstig voor BTC en risicovolle assets.",
      "timeframe": "1D",
      "interpretations": {
        "0": "Sterke stijging van de dollar – druk op BTC",
        "25": "Lichte stijging – voorzichtig bearish",
        "50": "Neutraal – evenwicht tussen valuta",
        "75": "Lichte verzwakking dollar – mild bullish",
        "100": "Zwakke dollar – sterk bullish voor BTC"
      },
      "actions": {
        "0": "Vermijd longposities in BTC",
        "25": "Bescherm bestaande posities",
        "50": "Afwachten op bevestiging",
        "75": "Bereid long setups voor",
        "100": "Goede kans voor BTC-rally"
      }
    },

    "fear_greed": {
      "symbol": "fear_greed",
      "source": "alternative",
      "thresholds": [25, 50, 75],
      "positive": false,
      "category": "sentiment",
      "correlation": "negatief",
      "explanation": "De Fear & Greed Index meet het marktsentiment binnen crypto. Een lage waarde duidt op angst, wat historisch vaak een goed instapmoment is (contrair signaal).",
      "timeframe": "1D",
      "interpretations": {
        "0": "Extreme fear – paniekfase",
        "25": "Angst overheerst, ondergewaardeerde markt",
        "50": "Neutraal marktsentiment",
        "75": "Matige greed – optimistische fase",
        "100": "Extreme greed – kans op correctie"
      },
      "actions": {
        "0": "Overweeg instapmoment – contrair signaal",
        "25": "Potentiële koopkans bij bevestiging",
        "50": "Afwachtende houding",
        "75": "Wees alert op oververhitting",
        "100": "Winst nemen of risico afbouwen"
      }
    }
  }
}
